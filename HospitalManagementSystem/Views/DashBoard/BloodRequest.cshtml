                @using (Html.BeginForm("BloodRequest", "DashBoard", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                <div class="row">
                    <div id="message">
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert @TempData["Messageclass"].ToString() alert-dismissible" role="alert">
                                <button type="button" class="close -close-btn" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                @TempData["Message"].ToString()
                            </div>
                        }
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div class="tab-pane active p-3" id="home" role="tabpanel">
                                <div class="row">
                                    <div class="col-md-4 col-sm-12">
                                        <div class="form-group row">
                                            <label class="control-label col-md-12 col-sm-12">Message:<span class="text-danger">*</span></label>
                                            <div class="col-md-12 col-sm-12">
                                                @Html.TextAreaFor(x => x.Message, new { @class = "form-control" })
                                                @*<textarea class="form-control"></textarea>*@

                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4 col-sm-12">
                                        <div class="form-group row">
                                            <label class="control-label col-md-12 col-sm-12">Blood Group:<span class="text-danger">*</span></label>
                                            <div class="col-md-12 col-sm-12">

                                                @Html.DropDownListFor(x => x.BGroup, new List<SelectListItem>
    {
                        new SelectListItem() {Text = "A+", Value="A+"},
                        new SelectListItem() {Text = "A-", Value="A-"},
                        new SelectListItem() {Text = "B+", Value="B+"},
                        new SelectListItem() {Text = "B-", Value="B-"},
                        new SelectListItem() {Text = "O+", Value="O+"},
                        new SelectListItem() {Text = "O-", Value="O-"},
                        new SelectListItem() {Text = "AB+", Value="AB+"},
                        new SelectListItem() {Text = "AB-", Value="AB-"}
    }, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-12">
                                        <div class="form-group row">
                                            <label class="control-label col-md-12 col-sm-12"><span class="text-danger">*</span></label>
                                            <div class="col-md-12 col-sm-12">
                                                <button type="submit" class="btn btn-success btn-sm waves-effect -small-btn">Submit</button>

                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="tab-pane p-3" id="profile" role="tabpanel">
                                <div class="row">
                                    @*<div class="col-md-2 col-sm-12">
